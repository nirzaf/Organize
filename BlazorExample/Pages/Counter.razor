@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button 
    class="btn btn-primary"
    @onclick="IncrementCount">
    Click me
</button>

<button onclick="alert('Hello from JS')">Invoke pure JS</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
